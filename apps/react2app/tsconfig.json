{
  "extends": "@react2app/typescript-config/cli.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "rootDir": ".",
    "outDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./dist"
  },
  "include": ["src/**/*", "bin/**/*"],
  "exclude": ["node_modules", "dist"],
  "copy": [
    { "from": "src/cli/templates", "to": "dist/templates" },
    { "from": "src/cli/fastlane", "to": "dist/fastlane" }
  ]
}
